<div class="glass-card rounded-2xl p-5 gradient-border overflow-hidden relative">
    <!-- Live Badge -->
    <div class="absolute top-4 right-4">
        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-red-500/10 text-red-500 text-xs font-semibold uppercase tracking-wider">
            <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-red-500"></span>
            </span>
            Live
        </span>
    </div>

    <!-- Round -->
    @if (!string.IsNullOrEmpty(Match.Round))
    {
        <p class="text-xs dark:text-gray-500 text-gray-400 mb-4">@Match.Round</p>
    }

    <!-- Match Content -->
    <div class="flex items-center gap-4">
        <!-- Home Team -->
        <div class="flex-1 text-center">
            @if (!string.IsNullOrEmpty(Match.HomeTeam.LogoUrl))
            {
                <img src="@Match.HomeTeam.LogoUrl" alt="@Match.HomeTeam.Name" class="w-12 h-12 mx-auto mb-2 object-contain" loading="lazy" />
            }
            else
            {
                <div class="w-12 h-12 mx-auto mb-2 rounded-full dark:bg-gray-700 bg-gray-200 flex items-center justify-center">
                    <span class="text-lg font-bold dark:text-gray-400 text-gray-500">@(Match.HomeTeam.ShortName ?? Match.HomeTeam.Name[..1])</span>
                </div>
            }
            <p class="text-sm font-medium dark:text-white text-gray-900 truncate">@Match.HomeTeam.Name</p>
        </div>

        <!-- Score -->
        <div class="flex-shrink-0 text-center">
            <div class="flex items-center gap-3">
                <span class="text-4xl font-bold dark:text-white text-gray-900 font-mono score-glow">
                    @(Match.Score?.HomeScore ?? 0)
                </span>
                <span class="text-2xl dark:text-gray-500 text-gray-400">:</span>
                <span class="text-4xl font-bold dark:text-white text-gray-900 font-mono score-glow">
                    @(Match.Score?.AwayScore ?? 0)
                </span>
            </div>
            
            <!-- Set Scores -->
            @if (Match.SetScores is not null && Match.SetScores.Count > 0)
            {
                <div class="mt-3 flex justify-center gap-2">
                    @foreach (var set in Match.SetScores)
                    {
                        <div class="px-2 py-1 rounded-lg dark:bg-gray-800/80 bg-gray-100">
                            <span class="text-xs font-mono @(set.HomeScore > set.AwayScore ? "text-volt-500" : "dark:text-gray-400 text-gray-500")">@set.HomeScore</span>
                            <span class="text-xs dark:text-gray-600 text-gray-400 mx-0.5">-</span>
                            <span class="text-xs font-mono @(set.AwayScore > set.HomeScore ? "text-volt-500" : "dark:text-gray-400 text-gray-500")">@set.AwayScore</span>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Away Team -->
        <div class="flex-1 text-center">
            @if (!string.IsNullOrEmpty(Match.AwayTeam.LogoUrl))
            {
                <img src="@Match.AwayTeam.LogoUrl" alt="@Match.AwayTeam.Name" class="w-12 h-12 mx-auto mb-2 object-contain" loading="lazy" />
            }
            else
            {
                <div class="w-12 h-12 mx-auto mb-2 rounded-full dark:bg-gray-700 bg-gray-200 flex items-center justify-center">
                    <span class="text-lg font-bold dark:text-gray-400 text-gray-500">@(Match.AwayTeam.ShortName ?? Match.AwayTeam.Name[..1])</span>
                </div>
            }
            <p class="text-sm font-medium dark:text-white text-gray-900 truncate">@Match.AwayTeam.Name</p>
        </div>
    </div>

    <!-- Start Time -->
    <p class="text-center mt-4 text-xs dark:text-gray-500 text-gray-400 font-mono">
        Started @ToUserLocalTime(Match.StartTime).ToString("HH:mm")
    </p>
</div>

@code {
    [Parameter, EditorRequired]
    public required Match Match { get; set; }

    [Parameter]
    public int TimezoneOffsetMinutes { get; set; }

    private DateTimeOffset ToUserLocalTime(DateTimeOffset utcTime)
    {
        // JS getTimezoneOffset returns minutes behind UTC (negative for ahead)
        return utcTime.ToOffset(TimeSpan.FromMinutes(-TimezoneOffsetMinutes));
    }
}
