<div class="flex flex-col items-center justify-center py-20 text-center">
    <div class="w-16 h-16 rounded-full bg-red-500/10 flex items-center justify-center mb-4">
        <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
    </div>
    <h3 class="text-lg font-semibold dark:text-white text-gray-900 mb-2">Something went wrong</h3>
    <p class="dark:text-gray-400 text-gray-500 mb-6">@Message</p>
    @if (OnRetry.HasDelegate)
    {
        <button @onclick="OnRetry" 
                class="px-4 py-2 rounded-xl bg-gradient-to-r from-volt-500 to-volt-600 text-white font-medium hover:from-volt-600 hover:to-volt-700 transition-all shadow-lg shadow-volt-500/25">
            Try Again
        </button>
    }
</div>

@code {
    [Parameter]
    public string Message { get; set; } = "An error occurred";

    [Parameter]
    public EventCallback OnRetry { get; set; }
}
